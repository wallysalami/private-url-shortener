<div id='login-container' class='d-flex justify-content-center align-items-center'>
  <div id='login-box' class='card'>
    <div class="card-block">
      <h1><%=t :login %></h1>

      <%= form_tag '/login' do %>
        <div class="field form-group">
          <%= label_tag(:username, t(:username), :class => 'control-label') %>
          <%= text_field_tag :username, "", :class => "form-control" %>
        </div>
        <div class="field form-group">
          <%= label_tag(:password, t(:password), class: 'control-label') %>
          <%= password_field_tag :password, "", :class => "form-control" %>
        </div>
        
        <%= bootstrap_button submit: true, layout: 'primary', icon: 'arrow-right',
          label: t(:submit)
        %>
      <% end %>
    </div>
  </div>
</div>