<% content_for :page_title, page_title_for_url(@url) %>
<% content_for :og_title, @url.title %>
<% content_for :og_description, @url.description %>

<div class='d-flex justify-content-center align-items-center'>
  <div style='min-width: 280px; max-width: 700px' class='card m-5'>
    <div class="card-block">
      <dl>
        <dt class='shortened-url-title'>
          <h1><%= @url.title %></h1>
        </dt>
        <dd class='shortened-url-description mt-3'>
          <%= @url.description %>
        </dd>
      </dl>

      <% if @url.is_locked %>
        <div class='text-center'>
          <i class='fa fa-lock fa-4x text-danger'></i>
        </div>
      <% else %>
        <%= bootstrap_button layout: 'primary', icon: 'arrow-right',
            label: t(:access_url), url: @url.destination_url
        %>
      <% end %>
    </div>
  </div>
</div>